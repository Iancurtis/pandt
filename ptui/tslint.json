{
	"extends": [
		"tslint:latest",
		"tslint-react",
		"tslint-eslint-rules"
	],
	"rules": {
		"no-constant-condition": true, // tslint-eslint-rules says this
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"no-unused-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			"always"
		],
		"triple-equals": true,
		"variable-name": [
			true,
			"allow-trailing-underscore",
			"allow-snake-case"
		],
		"interface-name": [
			"never-prefix"
		],
		"no-consecutive-blank-lines": [
			true,
			2
		],
		"array-type": [
			"generic"
		],
		"trailing-comma": [
			true,
			{
				"multiline": {"objects": "always"},
				"singleline": "never"
			}
		]
	}
}
